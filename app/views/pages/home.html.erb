                <%= image_tag(business.image_url, alt: business.name) if business.image_url.present? %>
                <div class="card-description">
                  <h2 class="card_title"><%= business.name %></h2>
                  <a href="<%= basket_path(@basket.id) %>">Panier Surprise</a>
                  <p>À récupérer aujourd'hui <%=@basket.pickup.strftime("%H")%></p>
                  <div class="round">
                    <a class="heart" href="<%= favourit_new_path(@basket.id) %>">
                      <i class="fa-regular fa-heart"></i>
                    </a>
                  </div>
                  <div>
                    <span><i class="fa-solid fa-star"></i></span>
                    <h2><%=@basket.price%> MUR</h2>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Bakeries -->
    <div class="category">
      <div class="round-button"><i class="fas fa-cog"></i></div>
      <p>Boulangeries</p>

      <!-- Display bakery cards -->
      <div class="main-container">
        <div class="horizontal-scroll-container">
          <% @businesses.each do |business| %>
            <% if business.category.downcase == "bakery" %>
              <% @basket = Basket.where(business_id: business.id).first %>
              <div class="card">
                <%= image_tag(business.image_url, alt: business.name) if business.image_url.present? %>
                <div class="card-description">
                  <h2 class="card_title"><%= business.name %></h2>
                  <a href="<%= basket_path(@basket.id) %>">Panier Surprise</a>
                  <p>À récupérer aujourd'hui <%=@basket.pickup.strftime("%H")%></p>
                  <div class="round">
                    <a class="heart" href="<%= favourit_new_path(@basket.id) %>">
                      <i class="fa-regular fa-heart"></i>
                    </a>
                  </div>
                  <div>
                    <span><i class="fa-solid fa-star"></i></span>
                    <h2><%=@basket.price%> MUR</h2>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

  </div>

  <!-- Remaining content -->
  <p class="text-start">À sauver avant qu'il ne soit trop tard</p>
</div>
