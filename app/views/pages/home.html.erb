<div class="container">
  <!-- Localisation -->
  <p><i class="fa-solid fa-location-dot"></i> Port Louis <i class="fa-solid fa-chevron-down"></i></p>
  <p>À moins de 10km</p>

  <!-- Search Bar -->
  <div class="container-search home">
    <div class="search-field">
      <div class="form">
        <i class="fa fa-search"></i>
        <input type="text" class="form-control form-input" placeholder="Recherche">
      </div>
    </div>
  </div>

  <!-- Categories sections -->
  <div class="categories-section">

    <!-- Restaurants -->
    <div class="category">
      <div class="round-button"><i class="fas fa-home"></i></div>
      <p>Restaurants</p>

      <!-- Display restaurant cards -->
      <div class="main-container">
        <div class="horizontal-scroll-container">
          <% @businesses.each do |business| %>
            <% if business.category.downcase == "restaurant" %>
              <% @basket = Basket.where(business_id: business.id).first %>
              <div class="card">
                <%= image_tag(business.image_url, alt: business.name) if business.image_url.present? %>
                <div class="card-description">
                  <h2 class="card_title"><%= business.name %></h2>
                  <a href="<%= basket_path(@basket.id) %>">Panier Surprise</a>
                  <p>À récupérer aujourd'hui <%=@basket.pickup.strftime("%H")%></p>
                  <div class="round">
                    <a class="heart" href="<%= favourit_new_path(@basket.id) %>">
                      <i class="fa-regular fa-heart"></i>
                    </a>
                  </div>
                  <div>
                    <span><i class="fa-solid fa-star"></i></span>
                    <h2><%=@basket.price%> MUR</h2>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Supermarkets -->
    <div class="category">
      <div class="round-button"><i class="fas fa-bell"></i></div>
      <p>Supermarchés</p>

      <!-- Display supermarket cards -->
      <div class="main-container">
        <div class="horizontal-scroll-container">
          <% @businesses.each do |business| %>
